mixin reviewForm(store)
  form.reviewer(action=`/reviews/${store._id}` method='POST')
    textarea(name='text' placeholder="Did you try this place? Have something to say? Leve a review...")  
    //- hoer the star
    .reviewer__meta 
      .reviewer__stars
        each num in [5,4,3,2,1]
          input(type='radio' required id=`star${num}` name='rating' value=num)
          //- use labels to show stars, if we wanna click label, need to make sure for if is the exact same thing 
          label(for=`star${num}`) #{num} Stars
      input.button(type='submit' value='Submit Reviewâ†’')